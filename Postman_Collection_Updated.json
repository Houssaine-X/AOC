			"name": "1. REST API - Orders",
			"item": [
				{
					"name": "Create Order",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Order created successfully\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
									"});",
									"",
									"if (pm.response.code === 200 || pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"order_id\", jsonData.id);",
									"    ",
									"    pm.test(\"Order has valid ID\", function () {",
									"        pm.expect(jsonData.id).to.be.a('number');",
									"    });",
									"    ",
									"    pm.test(\"Order has status\", function () {",
									"        pm.expect(jsonData.status).to.exist;",
									"    });",
									"    ",
									"    pm.test(\"Order has items\", function () {",
									"        pm.expect(jsonData.items).to.be.an('array');",
									"        pm.expect(jsonData.items.length).to.be.above(0);",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"clientId\": {{client_id}},\n  \"source\": \"e-commerce\",\n  \"items\": [\n    {\n      \"productId\": 1,\n      \"quantity\": 2\n    },\n    {\n      \"productId\": 2,\n      \"quantity\": 1\n    }\n  ]\n}"
						},
